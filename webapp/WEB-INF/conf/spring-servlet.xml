			<!--<mvc:exclude-mapping path="/api/community/**" />-->
			<!--&lt;!&ndash;<bean class="com.dengyuecang.www.interceptors.APIInterceptor" />&ndash;&gt;-->
		<!--</mvc:interceptor>-->
		
		<mvc:interceptor>
			<mvc:mapping path="/bg*/**" />
			<bean class="com.dengyuecang.www.interceptors.SecurityInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
</beans>